{
  "trailingComma": "none",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "tabWidth": 4,
        "parser": "lwc"
      }
    },
    {
      "files": "**/*.{cls,trigger,apex}",
      "options": {
        "apexInsertFinalNewline": true,
        "printWidth": 140,
        "tabWidth": 4
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html",
        "tabWidth": 4
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4,
        "printWidth": 140,
        "semi": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
